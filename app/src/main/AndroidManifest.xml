<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="vn.huynh.whatsapp">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".utils.MyApp"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new"
        android:logo="@mipmap/ic_launcher_new"
        android:supportsRtl="true"
        tools:replace="android:allowBackup"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:theme="@style/AppTheme">
        <activity android:name=".login.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home.HomeActivity" />
        <activity android:name=".contact.FindUserActivity" />
        <activity
            android:name=".chat.view.ChatActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateUnchanged|adjustResize" />
        <activity android:name=".group.view.CreateGroupActivity" />

        <service android:name=".services.NewMessageService" />
        <receiver android:name=".services.AppKilledBroadcast">
            <intent-filter>
                <action android:name="vn.huynh.whatsapp.KILLED" />
            </intent-filter>
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.BOOT_COMPLETED" />-->
            <!--</intent-filter>-->
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.PACKAGE_REPLACED" />-->
            <!--<data android:scheme="package" />-->
            <!--</intent-filter>-->
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.PACKAGE_ADDED" />-->
            <!--<data android:scheme="package" />-->
            <!--</intent-filter>-->
        </receiver>

        <service
            android:name=".utils.PlayMusicService"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="false" />
        <receiver
            android:name=".utils.RestartServiceReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="StartKilledService" />
            </intent-filter>
        </receiver>

        <activity android:name=".setting.WebViewActivity" />
    </application>

</manifest>